#define _CRT_SECURE_NO_WARNINGS

#include<stdio.h>
int main()
{
	int count = 0;//次数
    int r = 0;//红
    int w = 0;//白
    int b = 0;//黑
    printf("------------结果------------\n");
    for (r = 1; r <= 3; r++)
    {
        for (w = 1; w <= 5; w++)
        {
            b = 8 - r - w;
            printf("红色:%d个，白色:%d个，黑色:%d个\n", r, w, b);
            count++;
        }
    }
    printf("------------总数------------\n");
    printf("-------------%d-------------\n", count);
}
