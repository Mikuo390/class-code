#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	int n = 0;
	do
	{
		
		int i, j, l;
		//  百,十,个
		int count = 0;//总数
		printf("请输入n的大小(0<n<7):>");
		scanf("%d", &n);
		if (n > 0 && n < 7)
		{
			printf("----------------------------------------------------------------------------------------------------------------------\n");
			printf("-----------------------------------------------------输出结果如下-----------------------------------------------------\n");
			for (i = n; i < n+4; i++)
			{
				for (j = n; j < n+4; j++)
				{
					for (l = n; l < n+4; l++)
					{
						if (i != j && i != l && j != l)
						{
							printf("%d%d%d ", i, j, l);
							count++;
						}
					}
				}
			}
			printf("\n---------------------------------------------------------总数---------------------------------------------------------\n");
			printf("\n---------------------------------------------------------%-4d---------------------------------------------------------\n", count);
		}
		else
		{
			printf("输入错误！！！注意条件！！\n");
		}
	} while (n);
	
}
